<h2>Welcome, <%= current_user.username %></h2>
<% if @bills.empty? %>
<p><i>You currently don't have any bills... </i></p><br>
<p>Click <a href="/bills/new">here</a> to add a new bill</p>
<a href="/logout"><button> Log Out </button></a>

<% else %>
<p><i>Choose a bill to see more information </i></p><br><br>
<% @bills.each do |bill| %>
  <h3> Bill: <a href="/bills/<%= bill.id %>"><%= bill.name %></h3></a>
  <p> Date Due: <strong><%= bill.due_date.strftime("%A, %b. %-d, %Y") %></strong></p>
<% end %>
<br><br>

<a href="/bills/new"><button>New Bill</button></a>
<a href="/logout"><button>Log Out</button></a>
<% end %>